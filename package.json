{
  "name": "@digest-delivery/digest-delivery",
  "version": "0.1.0",
  "description": "Digests delivery daily",
  "private": true,
  "workspaces": [
    ".",
    "./delivery"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "test": "DOTENV_CONFIG_PATH=.env.example jest",
    "dev": "DEBUG=true next dev -p 5000",
    "build": "next build",
    "start": "next start -p 5000",
    "vercel-build": "prisma generate && prisma migrate deploy && npm run build"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^0.5.2-next.15",
    "@prisma/client": "^3.2.1",
    "@reach/dialog": "^0.16.0",
    "@react-hook/debounce": "^4.0.0",
    "aws-sdk": "^2.840.0",
    "blobs": "^2.2.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.25.0",
    "html-entities": "^2.3.2",
    "next": "^11.1.2",
    "next-auth": "^4.0.0-beta.4",
    "nodemailer": "^6.4.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-hot-toast": "^1.0.2",
    "superjson": "^1.7.5",
    "uuid-apikey": "^1.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digest-delivery/daily-digest.git"
  },
  "author": "samtgarson@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digest-delivery/daily-digest/issues"
  },
  "homepage": "https://github.com/digest-delivery/daily-digest#readme",
  "devDependencies": {
    "@samtgarson/eslint-config": "^2.4.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.3.7",
    "babel-plugin-superjson-next": "^0.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.5",
    "jest-mock-extended": "^2.0.4",
    "postcss": "^8.3.9",
    "prisma": "^3.2.1",
    "sass": "^1.42.1",
    "tailwindcss": "^2.2.16",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "extends": [
      "@samtgarson/eslint-config",
      "@samtgarson/eslint-config/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/extensions": [
        "error",
        {
          "scss": "always"
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": 0
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleNameMapper": {
      "^common/(.*)": "<rootDir>/common/$1",
      "^src/(.*)": "<rootDir>/src/$1",
      "^types/(.*)": "<rootDir>/types/$1"
    },
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/common/logger"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/\\.next/"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "babel-plugin-superjson-next"
    ]
  }
}

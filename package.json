{
  "name": "@digest-delivery/digest-delivery",
  "version": "0.1.0",
  "description": "Digests delivery daily",
  "private": true,
  "workspaces": [
    ".",
    "./delivery"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "test": "DOTENV_CONFIG_PATH=.env.example jest",
    "dev": "next dev -p 5000",
    "build": "next build",
    "start": "next start -p 5000"
  },
  "dependencies": {
    "@reach/dialog": "^0.13.2",
    "@react-hook/debounce": "^3.0.0",
    "@supabase/supabase-js": "^1.3.4",
    "blobs": "^2.2.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.19.0",
    "next": "canary",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-feather": "^2.0.9",
    "react-hot-toast": "^1.0.2",
    "superjson": "^1.7.2",
    "use-supabase": "^1.0.3",
    "uuid-apikey": "^1.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digest-delivery/daily-digest.git"
  },
  "author": "samtgarson@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digest-delivery/daily-digest/issues"
  },
  "homepage": "https://github.com/digest-delivery/daily-digest#readme",
  "devDependencies": {
    "@samtgarson/eslint-config": "^2.4.0",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "autoprefixer": "^10.2.4",
    "babel-plugin-superjson-next": "^0.2.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "postcss": "^8.2.6",
    "sass": "^1.32.8",
    "tailwindcss": "^2.0.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "@samtgarson/eslint-config",
      "@samtgarson/eslint-config/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/extensions": [
        "error",
        {
          "scss": "always"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleNameMapper": {
      "^common/(.*)": "<rootDir>/common/$1",
      "^src/(.*)": "<rootDir>/src/$1",
      "^types/(.*)": "<rootDir>/types/$1"
    },
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/common/logger"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "superjson-next"
    ]
  }
}
